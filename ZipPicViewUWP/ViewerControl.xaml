<UserControl
    x:Class="ZipPicViewUWP.ViewerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZipPicViewUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Button Content="&gt;" x:Name="nextButton" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="100"/>
        <Button Content="&lt;" x:Name="prevButton" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center" Height="100"/>

        <RelativePanel HorizontalAlignment="Center" Grid.Row="1" MinHeight="50"  Margin="10" VerticalAlignment="Top" Visibility="Collapsed">
            <Button Name="saveBtn" Content="Save" RelativePanel.AlignLeftWithPanel="True" VerticalAlignment="Stretch" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True"/>
            <ToggleButton Name="autoBtn" Content="Auto" RelativePanel.RightOf="saveBtn" VerticalAlignment="Stretch" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True"/>
            <ComboBox Name="durationCmb" RelativePanel.RightOf="autoBtn" RelativePanel.AlignVerticalCenterWithPanel="True" SelectedIndex="0">
                <ListBoxItem Content="5 seconds"/>
                <ListBoxItem Content="15 seconds"/>
                <ListBoxItem Content="30 seconds"/>
                <ListBoxItem Content="1 minutes"/>
                <ListBoxItem Content="5 minutes"/>
                <ListBoxItem Content="15 minutes"/>
            </ComboBox>
        </RelativePanel>

        <Button x:Name="closeButton" Content="X" Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        <TextBlock x:Name="filenameTextBlock" VerticalAlignment="Bottom" Margin="0" />
    </Grid>
</UserControl>
